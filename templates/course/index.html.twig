{% extends 'base.html.twig' %}

{% block title %}Hello CourseController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('course') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1 class="text-center">Mon parcours</h1>
                </div>
                <div class="container-timeline" id="content">
                    <ul class="timeline timeline-horizontal" id="block">
                        {% for course in courses %}
                        <li class="timeline-item">
                            <div class="timeline-badge" data-toggle="popover" data-bs-placement="bottom" title="{{ course.title }}" data-bs-container="body" data-bs-content="{{ course.description }}">
                                {{ course.years }}
                            </div>
                            <div class="mb-5"><h2 class="pb-3 ms-3 mt-1 title-event">{{ course.title }}</h2></div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="d-flex justify-content-center next">
                    <button class="btn m-2 rounded-circle fs-5" id="left"><i class="fas fa-chevron-left"></i></button>
                    <button class="btn m-2 rounded-circle fs-5" id="right"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('course') }}
{% endblock %}

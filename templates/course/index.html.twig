    <div class="timeline-container timeline-horizontal">
        <div class="button timeline-toggle" aria-label="toggle between horizontal and vertical timeline" role="button" tabindex="0"><i class="fas fa-arrows-alt-v"></i>&emsp;<i class="fas fa-arrows-alt-h"></i></div>

{% extends 'base.html.twig' %}

{% block title %}Hello DocumentsController!{% endblock %}

   {% block stylesheets %}
       {{ encore_entry_link_tags('document') }}
   {% endblock %}

{% block body %}
    <div class="content">
    {% for document in documents %}
        <object type="application/pdf" width="100%" height="100%">
            <param name="src" value="{{ document.name }}" />
            <section class="content-aligned">
                <img src="{{ asset('build/cv-picture.png') }}" class="border border-4 border-secondary m-5 background-image" alt="cv">
                <div class="title-center text-bold"><a href="{{ document.docPdf }}" target="_blank">Cliquez ici pour télécharger le fichier PDF.</a>
                    <br> <p class="text-center fw-bolder">{{ document.name }}</p></div>
            </section>
        </object>
    {% endfor %}
    </div>
{% endblock %}

            <div class="alert alert-secondary fs-2">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'm-5'}}) }}
            <h1 class="text-bold text-decoration-underline text-center">Contacter moi</h1>
            <div class="mb-2">
                <label for="{{ form.Name.vars.id }}"></label>
                {{ form_widget(form.Name) }}
            </div>
            <div class="mb-2">
                <label for="{{ form.Compagny_Name.vars.id }}"></label>
                {{ form_widget(form.Compagny_Name) }}
            </div>
            <div class="mb-2">
                <label for="{{ form.mail.vars.id }}"></label>
                {{ form_widget(form.mail) }}
            </div>
            <div class="mb-2">
                <label for="{{ form.body_text.vars.id }}"></label>
                {{ form_widget(form.body_text) }}
            </div>
            {{ form_end(form) }}
            <hr>
            <p class="display-6 text-center p-5 m-4">Programmer un appel, via mon lien Calendly : <a href="https://calendly.com/madjoula-toure">https://calendly.com/madjoula-toure</a></p>
        </div>

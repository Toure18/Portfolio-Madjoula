{% extends 'base.html.twig' %}

{% block title %}Portfolio'Madjoula | Mes formations{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('formation') }}
{% endblock %}

{% block body %}
    <div class="formation-container">
        <div class="container-header">
            <h2 class="header_title">Mes formations</h2>
            <h3 class="header_subtitle">A partir de l'obtention de mon bac Es en 2017</h3>
        </div>
        <div class="container-body">
            {% for formation in formations %}
                    <div class="item m-3">
                        <div class="text-center"><img class="item-img" src="{{ asset(formation.logo) }}" alt="logo-{{ formation.schoolName }}"/>
                            <h2 class="title text-center">{{ formation.years }}</h2>
                            <p class="description">{{ formation.description }}</p>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

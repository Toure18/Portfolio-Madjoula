{% extends 'base.html.twig' %}

{% block title %}Portfolio'Madjoula | Mes formations{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('formation') }}
{% endblock %}

{% block body %}

    <div class="timeline-container" id="timeline-1">
        <div class="timeline-header">
            <h2 class="timeline-header__title">Mes formations</h2>
            <h3 class="timeline-header__subtitle">A partir de l'obtention de mon bac Es en 2017</h3>
        </div>
        <div class="timeline">
            {% for formation in formations %}
                    <div class="timeline-item">
                        <div class="timeline__content"><img class="timeline__img" src="{{ asset(formation.logo) }}"/>
                            <h2 class="timeline__content-title text-center">{{ formation.years }}</h2>
                            <p class="timeline__content-desc">{{ formation.description }}</p>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>



{% endblock %}
